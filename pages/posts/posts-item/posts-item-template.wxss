.post-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}
.post-container{
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction:column;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;  
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  height: 60rpx;
  width: 60rpx;
}
.post-date{
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin: 0 0 10px 10px;
  color: #333;
}
.post-like-img{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}
.post-like{
  display: flex;
  align-items: center;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.post-text{
  margin-right: 40rpx;
}